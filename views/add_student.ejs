<link rel="stylesheet" href="/css/add_student.css">

      <h4>Add student</h4>
    
      <form id="add student form" action="/student/create" method="POST">
    
        <div>
          <label for="name">Name</label>
          <input
            type="text"
            placeholder="Enter student name"
            id="name"
            name="name"
            required
          />
        </div>
    
        <div>
          <label for="email" >Email</label>
          <input
            type="text"
            placeholder="Enter student email"
            id="email"
            name="email"
            required
          />
        </div>
    
        <div>
          <label for="college">college</label>
          <input
            type="text"
            placeholder="Enter student college"
            id="college"
            name="college"
            required
          />
        </div>
    
        <div >
            <label for="placement-status">Placement status</label>
            <select id="placement-status" required name="placementStatus">
                <option selected>Not placed</option>
                <option>Placed</option>
            </select>
        </div>
    
        <div >
            <label for="batch" >Batch</label>
            <input type="text"  id="batch" placeholder="Enter batch no." name="batch" required/>
        </div>
    
        <div >
          <label for="dsa-score" >DSA score</label>
          <input type="number"  id="dsa-score" name="dsa" required/>
        </div>
    
        
        <div >
          <label for="webdev-score" >WebDev score</label>
          <input type="number" id="webdev-score" name="webdev" required/>
        </div>
    
        
        <div >
          <label for="react-score" >React score</label>
          <input type="number"  id="react-score" name="react" required/>
        </div>    
        
        <div >
          <button type="submit" c>Add Student</button>
        </div>
    
      </form>
   
   